{
  "name": "archive-35-social",
  "version": "0.2.0",
  "description": "Social media content engine for Archive-35 photography â€” 8 platform video rendering",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run react-dev\" \"wait-on http://localhost:3001 && electron .\"",
    "react-dev": "PORT=3001 react-scripts start",
    "build": "react-scripts build && electron-builder",
    "test": "react-scripts test"
  },
  "author": "Wolfgang Schram",
  "license": "UNLICENSED",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "electron-is-dev": "^2.0.0",
    "sharp": "^0.33.0",
    "fluent-ffmpeg": "^2.1.3",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.archive35.social",
    "productName": "Archive-35 Social",
    "mac": {
      "category": "public.app-category.social-networking",
      "icon": "assets/icon.icns",
      "target": ["dmg"]
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "browserslist": {
    "production": ["last 1 electron version"],
    "development": ["last 1 electron version"]
  }
}
