{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Archive-35 Video Template",
  "description": "Template definition exported from Archive-35 Studio Compositor Editor",
  "type": "object",
  "required": ["version", "name", "platform", "canvas", "layers", "timeline"],
  "properties": {
    "version": { "type": "string", "const": "1.0" },
    "name": { "type": "string", "description": "Human-readable template name" },
    "platform": {
      "type": "string",
      "enum": ["tiktok", "instagram_reels", "instagram_feed", "youtube", "youtube_shorts", "facebook", "linkedin", "x_twitter"]
    },
    "canvas": {
      "type": "object",
      "required": ["width", "height", "background"],
      "properties": {
        "width": { "type": "integer" },
        "height": { "type": "integer" },
        "background": { "type": "string", "description": "CSS color value" }
      }
    },
    "layers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string", "enum": ["photo", "text", "logo", "shape", "accent_line"] },
          "x": { "type": "number" },
          "y": { "type": "number" },
          "width": { "type": "number" },
          "height": { "type": "number" },
          "locked": { "type": "boolean", "default": false },
          "visible": { "type": "boolean", "default": true },
          "opacity": { "type": "number", "minimum": 0, "maximum": 1, "default": 1 },
          "animation": {
            "type": "object",
            "properties": {
              "style": { "type": "string", "enum": ["kenburns_fade", "quick_cut", "slide_gallery", "circle_reveal", "zoom_pan_combo", "none"] },
              "zoomRange": { "type": "array", "items": { "type": "number" }, "minItems": 2, "maxItems": 2 },
              "panDirection": { "type": "string", "enum": ["left_to_right", "right_to_left", "top_to_bottom", "bottom_to_top", "center", "random"] }
            }
          },
          "text": {
            "type": "object",
            "properties": {
              "content": { "type": "string" },
              "fontFamily": { "type": "string" },
              "fontSize": { "type": "number" },
              "fontWeight": { "type": "string" },
              "letterSpacing": { "type": "number" },
              "color": { "type": "string" },
              "align": { "type": "string", "enum": ["left", "center", "right"] },
              "dynamic": { "type": "boolean", "description": "If true, replaced with gallery metadata at render time" },
              "dynamicField": { "type": "string", "enum": ["gallery_name", "gallery_location", "slogan", "url", "photographer", "date"] }
            }
          },
          "logo": {
            "type": "object",
            "properties": {
              "src": { "type": "string", "description": "Filename in templates/assets/ folder" }
            }
          },
          "shape": {
            "type": "object",
            "properties": {
              "shapeType": { "type": "string", "enum": ["rect", "line", "circle"] },
              "stroke": { "type": "string" },
              "strokeWidth": { "type": "number" },
              "fill": { "type": "string" }
            }
          }
        }
      }
    },
    "timeline": {
      "type": "object",
      "required": ["introDuration", "photoDuration", "outroDuration", "transition"],
      "properties": {
        "introDuration": { "type": "number", "description": "Seconds for intro title card" },
        "photoDuration": { "type": "number", "description": "Seconds per photo" },
        "outroDuration": { "type": "number", "description": "Seconds for outro/CTA card" },
        "transition": {
          "type": "object",
          "properties": {
            "type": { "type": "string", "enum": ["fade", "dissolve", "slideleft", "slideright", "circleopen", "circleclose", "none"] },
            "duration": { "type": "number" }
          }
        },
        "fps": { "type": "integer", "default": 30 },
        "maxPhotos": { "type": "integer", "description": "Maximum photos to include" }
      }
    },
    "audio": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean", "default": false },
        "src": { "type": "string", "description": "Filename in templates/audio/ folder" },
        "volume": { "type": "number", "minimum": 0, "maximum": 1, "default": 0.7 },
        "fadeIn": { "type": "number", "default": 1.5 },
        "fadeOut": { "type": "number", "default": 2 }
      }
    },
    "encoding": {
      "type": "object",
      "properties": {
        "codec": { "type": "string", "default": "libx264" },
        "crf": { "type": "integer", "default": 18 },
        "preset": { "type": "string", "default": "medium" }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "author": { "type": "string" },
        "notes": { "type": "string" }
      }
    }
  }
}
